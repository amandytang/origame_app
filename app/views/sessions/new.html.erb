<% unless flash.empty? %>
  <div id="notice"><%= flash[:error]%></div>
<% end %>

<%= form_tag login_path, :class => "form" do %>

<div id="form-heading" class="paper">Welcome Back</div>

<p class="fieldset">
  <%= label_tag :email, "Email", :class => "image-replace email" %>
  <%= email_field_tag :email, nil, placeholder: "Email", :autofocus => true %>

  <%= label_tag :password, "Password", :class => "image-replace password" %>
  <%= password_field_tag :password, nil, placeholder: "Password"%>

  <%= submit_tag 'LOG IN', :class => "submit" %>
</p>
<% end %>
