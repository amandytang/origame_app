<div id="gallery">
<% if @current_user.favourites.present? %>

<% @current_user.favourites.each do |favourite| %>
<% if favourite.image.present? %>
  <div class="thumb hvr-float">
   <%= link_to image_tag(favourite.image, alt: favourite.name), favourite %><div class="label"><%= favourite.name %></div></div>
    <% end %>
  <% end %></div>

<% else %>

<p>You have no favourites yet. Go <%= link_to 'find some', designs_path %>!</p>

<% end %>
