
<% if @user.errors.any? %>
<div id="notice">
  <% @user.errors.full_messages.each do |msg|  %>
  <%= msg.capitalize %>.&nbsp;
</div>
<% end %>
<% end %>

<%= form_for @user do |f| %>

<div id="register-heading" class="paper">Welcome</div>

<p class="fieldset">

  <%= f.label :username, :class => "image-replace username" %>
  <%= f.text_field :username, :required => true, :autofocus => true, placeholder: "Username" %>

  <%= f.label :email, :class => "image-replace email" %>
  <%= f.email_field :email, :required => true, placeholder: "Email" %>

  <%= f.label :password, :class => "image-replace password" %>
  <%= f.password_field :password, placeholder: "Password" %>

  <%= f.label :password_confirmation, :class => "image-replace password"%>
  <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>

  <%= f.submit 'REGISTER', :class => "submit" %>
  </p>
<% end %>
